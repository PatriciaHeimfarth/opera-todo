{
	"manifest_version": 2,

	"name": "ToDo List",
	"description": "A ToDo List for the Opera Sidebar",
	"version": "0.1",
	"background": {
		"scripts": ["background.js"]
	},

	"permissions": ["tabs"],
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Go to Dev.Opera!"
	},

    "sidebar_action": {
         
        "default_icon": "icon.png",
         
        "default_title": "Todo List",
        
        "default_panel": "panel.html"
    }
}